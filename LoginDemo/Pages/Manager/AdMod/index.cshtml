@page
@model LoginDemo.Pages.Manager.AdModel
@{
    ViewData["Title"] = "图片列表";
}
<!DOCTYPE html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">



<link rel="shortcut icon" href="favicon.ico"> <link href="~/dist/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
<link href="~/dist/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
